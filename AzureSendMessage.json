            "value": "{{access_token}}",
            "type": "default"
          },
          {
            "key": "BrokerProperties",
            "value": "{{broker_properties}}",
            "type": "default"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{request body}",
          "options": {
